      script(type='text/javascript').
        function init(){
        //Creation d'un objet map avec certains params (position sur la map et zoom)
        var map = L.map('map',{zoomControl:false}).setView([48.697936, 6.214196], 16);
        // Ajout du "layer" (genre la map dessiner quoi) sur la map
        L.tileLayer('http://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        maxZoom: 20,
        }).addTo(map);
        //Création d'une variable marker + ajout sur la map
        var marker = L.marker([48.697936, 6.214196]).addTo(map);
        }
